{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "react-app",
    "react-app/jest",
    "standard",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "semi": "off",
    "comma-dangle": "off",
    "space-before-function-paren": "off",
    "multiline-ternary": "off",
    "curly": "off",
    "quotes": "off",
    "indent": "off"
  }
}